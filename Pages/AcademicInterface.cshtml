@page
@model FLEXX.Pages.AcademicInterfaceModel
@{
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Academic Office Interface</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 30px;
        }

        .form-title {
            font-size: 24px;
            font-weight: bold;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .table-title {
            font-size: 24px;
            font-weight: bold;
            margin-top: 50px;
            margin-bottom: 20px;
        }

        .card {
            margin-top: 30px;
        }

        .card-header {
            background-color: #3f51b5;
            color: white;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #3f51b5;
            border-color: #3f51b5;
            font-weight: bold;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Academic Office Interface</h1>

        <!-- Add New Course Form -->
        <div class="card">
            <div class="card-header">Add New Course</div>
            <div class="card-body">
                <form>
                    <div class="form-title">Enter Course Details</div>
                    <div class="form-group">
                        <label for="course-id">Course ID</label>
                        <input type="text" class="form-control" id="course-id">
                    </div>
                    <div class="form-group">
                        <label for="course-code">Course Code</label>
                        <input type="text" class="form-control" id="course-code">
                    </div>
                    <div class="form-group">
                        <label for="course-name">Course Name</label>
                        <input type="text" class="form-control" id="course-name">
                    </div>
                    <button type="submit" class="btn btn-primary">Add Course</button>
                </form>
            </div>
        </div>

        <!-- Available Courses Table -->
        <div class="card">
            <div class="card-header">Available Courses</div>
            <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Course ID</th>
                        <th>Course Name</th>
                        <th>Course Code</th>
                        <th>Credit Hours</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>CSCI101</td>
                        <td>Introduction to Computer Science</td>
                        <td>CSCI101</td>
                        <td>3</td>
                    </tr>
                    <tr>
                        <td>MATH201</td>
                        <td>Calculus I</td>
                        <td>MATH201</td>
                        <td>4</td>
                    </tr>
                    <!-- Add more rows for each available course -->
                </tbody>
            </table>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Register Student</div>
            <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="studentID">Student ID:</label>
                    <input type="text" class="form-control" id="studentID">
                </div>
                <div class="form-group">
                    <label for="courseCode">Course Code:</label>
                    <input type="text" class="form-control" id="courseCode">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            </div>
        </div>
        <div class="card">
            <div class="card-header">Register Faculty for Course</div>
            <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="courseSelect">Select a course:</label>
                    <select class="form-control" id="courseSelect">
                        <option>CSCI101 - Introduction to Computer Science</option>
                        <option>MATH201 - Calculus I</option>
                        <!-- Add more options for each available course -->
                    </select>
                </div>
                <div class="form-group">
                    <label for="instructorSelect">Select an instructor:</label>
                    <select class="form-control" id="instructorSelect">
                        <option>John Smith</option>
                        <option>Jane Doe</option>
                        <!-- Add more options for each available instructor -->
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            </div>
        </div>

        </body>

</html>





